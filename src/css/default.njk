/* tooltips */

/* indicate hoverable */
.tooltip {
  position:relative;
  border-bottom: dotted 1px #A1A3A1;
}

/* tooltip content */
.tooltip:before {
  content: attr(data-tooltip-text);
  position:absolute;

  top:50%;
  transform: translateY(-50%) scale(0.0);

  left:100%;
  margin-left:15px;

  color: black;
  text-align: left;
  font-size: smaller;
  text-decoration: #A1A3A1 dotted underline;

  width: max-content;
  max-width: 20rem;
  padding: 10px;
  border-radius: 10px;
  background-color: hsl(0 0% 98%);
  border: 3px outset hsl(0 0% 78%);

  display: block;

  transition-property: all;
  /* or transform ?*/
  transition-duration: 0.1s;
  /* or 0.15s ?*/
  transition-timing: linear;
  /* ease-in;  */

  opacity: 1;
}

/* show tooltip when hovering */
.tooltip:hover:before {
  display: block;
  transform: translateY(-50%) scale(1);
  z-index: 100;
}

/* footnote yellow flash

   hsl(60 100% 50% / 0.7) = yellow, 70% opacity

*/

/* arrived at bottom of page - fade out background */

.footnotes .footnote-item:target {
  animation: yellowflash-bg 1.2s;
}

@keyframes yellowflash-bg {
  from { background: hsl(60 100% 50% / 0.7); }
  to   { background: transparent; }
}

/* returned to top - fade out background *plus* outline */

.footnote-ref a:target {
  animation: yellowflash-outline 1.2s;
}

@keyframes yellowflash-outline {
  from {
    outline: 10px solid hsl(60 100% 50% / 0.7);
    background: hsl(60 100% 50% / 0.7);
  }

  to {
    outline: 10px solid transparent;
    background: transparent;
  }
}


/* general (e.g. toc) link blue flash
   hsl(183 100% 75% / 0.7) = electric blue, 70% opacity
*/

/* arrived at target */

h2:target, h3:target, h4:target
{
  animation: blueflash-bg 1.6s;
}


@keyframes blueflash-bg {
  from { background: hsl(183 100% 75% / 0.7); }
  to   { background: transparent; }
}

/* avoid ugly default black outline style in chrome */
* {
  outline-color: DodgerBlue;
}


